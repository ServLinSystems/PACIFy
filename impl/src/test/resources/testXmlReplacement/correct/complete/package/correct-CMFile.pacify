<Pacify xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="file://D5430988/c$/oppermans002/projekte/0_external/PACIFy/model/src/main/resources/pacify.xsd">
	<XMLFile RelativePath="correctConf.xml">
		<XPath Select="/root/foo/foo">
			<Create>
				<FixedString>foofoo</FixedString>
			</Create>
		</XPath>
		<XPath Select="/root/bar/foo">
			<Create>
				<Property Name="barfoo" />
			</Create>
		</XPath>
		<XPath Select="/root/foo/bar">
			<Update>
				<FixedString>foobarCHANGED</FixedString>
			</Update>
		</XPath>
		<XPath Select="/root/to">
			<Delete />
		</XPath>
	</XMLFile>
	<XMLFile RelativePath="log4j2.xml">
		<XPath Select="/Configuration/Loggers/Root/bar/foo">
			<Create>
				<Property Name="barfoo" />
			</Create>
		</XPath>
		<XPath  Select="/Configuration/Loggers/Logger[@name='com.geewhiz.pacify']/@newAttribute">
			<Create>
				<FixedString>foo</FixedString>
			</Create>
		</XPath>
		<XPath
			Select="/Configuration/Loggers/Logger[@name='com.geewhiz.pacify']/@level">
			<Update>
				<FixedString>DEBUG</FixedString>
			</Update>
		</XPath>

	</XMLFile>
</Pacify>
